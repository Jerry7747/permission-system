<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.cqie.mapper.SysPostMapper">
    <!-- 自动映射 -->
    <resultMap id="postMap" type="org.cqie.model.system.SysPost" autoMapping="true">
    </resultMap>
    <!-- 公共字段 -->
    <sql id="columns">
        id,post_code,name,description,status,create_time,update_time,is_deleted
    </sql>

    <select id="selectPage" resultMap="postMap">
        select <include refid="columns"/>
            from sys_post
        <where>
            <if test="vo.postCode != null and vo.postCode != ''">
                and post_code like CONCAT('%',#{vo.postCode},'%')
            </if>
            <if test="vo.name != null and vo.name != ''">
                and name like CONCAT('%',#{vo.name},'%')
            </if>
            <if test="vo.status != null">
                and status = #{vo.status}
            </if>
            and is_deleted = 0
        </where>
        order by id desc
    </select>

</mapper>
